{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bghoard/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@bghoard/shared/util-formatters": [
        "libs/shared/util-formatters/src/index.ts"
      ],
      "@bghoard/review/data-access-games": [
        "libs/review/data-access-games/src/index.ts"
      ],
      "@bghoard/review/feature-list": ["libs/review/feature-list/src/index.ts"],
      "@bghoard/review/feature-details": [
        "libs/review/feature-details/src/index.ts"
      ],
      "@bghoard/store/feature-list": ["libs/store/feature-list/src/index.ts"],
      "@bghoard/store/feature-details": [
        "libs/store/feature-details/src/index.ts"
      ],
      "@bghoard/store/feature-cart": ["libs/store/feature-cart/src/index.ts"],
      "@bghoard/store/ui-formatters": ["libs/store/ui-formatters/src/index.ts"],
      "@bghoard/store/data-access-games": [
        "libs/store/data-access-games/src/index.ts"
      ],
      "@bghoard/store/data-access-cart": [
        "libs/store/data-access-cart/src/index.ts"
      ],
      "@bghoard/shared/ui-tile": ["libs/shared/ui-tile/src/index.ts"],
      "@bghoard/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@bghoard/react-publish": ["libs/react-publish/src/index.ts"],
      "@bghoard/angular-publish": ["libs/angular-publish/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
